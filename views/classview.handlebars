<script src="/classview.js" charset="utf-8" defer></script>
<script src="https://cdn.plot.ly/plotly-2.12.1.min.js"></script>
<div class="class-view">
  <div class="left-classview" style="border-left: 10px solid {{color}}">
    <h1 class="classname" id="id">{{id}}</h1>
    <h1 class="classname" id="name" style="color: #777; margin-top: -30px">{{name}}</h1>
    <div id="plot"></div>
  </div>
  <div class="right-classview">
    <h1 class="classname">Student Reviews</h1>
    <div class="review-container">
      <button id="create-review-button" onclick="show_modal()" style="background-color: {{color}}">Create Review</button>
      {{#each reviews}}
        {{> review}}
      {{/each}}
    </div>
  </div>
</div>
{{> modal}}