<a href="http://localhost:3000/{{id}}">
    <article class="class" style="border-left: 10px solid {{color}}">
            <p class="class-title">
                {{id}}: {{name}}
            </p>
            <br/>
            <p class="class-content">
                {{description}}
            </p>
            <p class="class-rating" style="color: #777">
                {{rating}}%
            </p>
    </article>
</a>
